{% extends "utilisateur/sidenav.html.twig" %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center"> <!-- Centrer la carte horizontalement -->
        <div class="col-12 col-md-8 col-lg-6"> <!-- Largeur responsive -->
            <div class="col-xl" style="margin-left: 120px; width: 500px; margin-top: 200px;"> 
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle"></i> Détails de la Catégorie
                        </h5>
                        <small class="text-body float-end">
                            Informations détaillées
                        </small>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>ID :</strong> {{ categorie.id }}
                            </li>
                            <li class="list-group-item">
                                <strong>Nom :</strong> {{ categorie.nom }}
                            </li>
                            <li class="list-group-item">
                                <strong>Description :</strong> {{ categorie.description }}
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center gap-2"> <!-- Alignement des boutons -->
                            <a href="{{ path('categorie_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <div class="d-flex gap-2"> <!-- Groupe de boutons à droite -->
                                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}