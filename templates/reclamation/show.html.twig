{% extends 'patient/baseRendezVous.html.twig' %} 

{% block title %}D√©tails de la R√©clamation{% endblock %}

{% block content %}
<!-- Navbar -->

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="col-xl" style="margin-left: 120px; width: 500px; margin-top: 200px;">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle"></i> D√©tails de la R√©clamation
                        </h5>
                        <small class="text-body float-end">Informations d√©taill√©es</small>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <i class="fas fa-hashtag"></i> <strong>ID :</strong> {{ reclamation.id }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-file-alt"></i> <strong>Description :</strong> {{ reclamation.description }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-bullseye"></i> <strong>Cible :</strong> {{ reclamation.cible }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-tag"></i> <strong>Type :</strong> {{ reclamation.type.value }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-calendar-alt"></i> <strong>Date de Cr√©ation :</strong> {{ reclamation.datecreation|date('d/m/Y H:i') }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-layer-group"></i> <strong>Cat√©gorie :</strong> {{ reclamation.categorie.nom }}
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-exclamation-circle"></i> <strong>Statut :</strong>
                                {% if reclamation.statut.value == 'en_attente' %}
                                    <span class="badge bg-warning text-dark">üïí {{ reclamation.statut.value }}</span>
                                {% elseif reclamation.statut.value == 'en_cours' %}
                                    <span class="badge bg-info text-dark">üîÑ {{ reclamation.statut.value }}</span>
                                {% elseif reclamation.statut.value == 'r√©solue' %}
                                    <span class="badge bg-success">‚úÖ {{ reclamation.statut.value }}</span>
                                {% else %}
                                    <span class="badge bg-danger">‚ùå {{ reclamation.statut.value }}</span>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="card mb-4">
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-tasks"></i> D√©tails des Traitements
            </h5>
            <small class="text-body float-end">Liste des traitements</small>
        </div>
        <div class="card-body">
            {% if reclamation.traitementReclamations is empty %}
                <p class="text-muted">Aucun traitement pour cette r√©clamation.</p>
            {% else %}
                <ul class="list-group">
                    {% for traitement in reclamation.traitementReclamations %}
                        <li class="list-group-item">
                            <i class="fas fa-comment-dots"></i> <strong>Commentaire :</strong> {{ traitement.commentaire }}
                            <br>
                            <i class="fas fa-calendar-check"></i> <strong>Date de traitement :</strong> {{ traitement.dateTraitement|date('d/m/Y H:i') }}
                            <br>
                            <i class="fas fa-flag"></i> <strong>Statut :</strong>
                            {% if traitement.etat.value == 'en_cours' %}
                                <span class="badge bg-info text-dark">üîÑ {{ traitement.etat.value }}</span>
                            {% elseif traitement.etat.value == 'r√©solue' %}
                                <span class="badge bg-success">‚úÖ {{ traitement.etat.value }}</span>
                            {% elseif traitement.etat.value == 'rejet√©' %}
                                <span class="badge bg-danger">‚ùå {{ traitement.etat.value }}</span>
                            {% endif %}
                            <br>
                            <i class="fas fa-star"></i> <strong>Note :</strong>
                            {% if traitement.rating %}
                                {{ traitement.rating }}/5
                            {% else %}
                                <form action="{{ path('traitement_rate', {'id': traitement.id}) }}" method="POST" class="d-inline">
                                    <div class="rating">
                                        <input type="radio" id="star5_{{ traitement.id }}" name="rating" value="5" />
                                        <label for="star5_{{ traitement.id }}" title="5 stars">‚òÖ</label>
                                        <input type="radio" id="star4_{{ traitement.id }}" name="rating" value="4" />
                                        <label for="star4_{{ traitement.id }}" title="4 stars">‚òÖ</label>
                                        <input type="radio" id="star3_{{ traitement.id }}" name="rating" value="3" />
                                        <label for="star3_{{ traitement.id }}" title="3 stars">‚òÖ</label>
                                        <input type="radio" id="star2_{{ traitement.id }}" name="rating" value="2" />
                                        <label for="star2_{{ traitement.id }}" title="2 stars">‚òÖ</label>
                                        <input type="radio" id="star1_{{ traitement.id }}" name="rating" value="1" />
                                        <label for="star1_{{ traitement.id }}" title="1 star">‚òÖ</label>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-primary">Noter</button>
                                </form>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="d-flex justify-content-between align-items-center gap-2">
            <a href="{{ path('reclamation_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour √† la liste
            </a>
            <div class="d-flex gap-2">
                <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                
            </div>
        </div>
    </div>
</div>
<style>
    .rating {
        display: inline-block;
        unicode-bidi: bidi-override;
        direction: rtl;
    }
    .rating > input {
        display: none;
    }
    .rating > label {
        display: inline-block;
        font-size: 24px;
        color: #ddd;
        cursor: pointer;
    }
    .rating > input:checked ~ label,
    .rating > input:hover ~ label {
        color: #ffcc00;
    }
    </style>
{% endblock %}