{% extends 'patient/baseRendezVous.html.twig' %}
{% block head %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>CareConnect - R√©clamations</title>
    <meta name="description" content="" />
    <link rel="icon" type="image/x-icon" href="{{ asset('../assets/img/favicon/favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('../assets/vendor/css/core.css') }}" />
    <link rel="stylesheet" href="{{ asset('../assets/vendor/css/theme-default.css') }}" />
    <link rel="stylesheet" href="{{ asset('../assets/css/demo.css') }}" />
{% endblock %}

{% block content %}
<!-- Navbar -->

<div class="container-xxl flex-grow-1 container-p-y width: 2050px;margin-left: 120px; margin-top: 1000px;">
    <!-- Affichage des messages flash -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    <form method="GET" action="{{ path('reclamation_index') }}" class="mb-3">
        <div class="row">
            <!-- Filtre par Statut -->
            <div class="col-md-4">
                <label for="statut" class="form-label">Statut</label>
                <select name="statut" id="statut" class="form-control">
                    <option value="">Tous</option>
                    <option value="En attente" {{ selectedStatut == 'En attente' ? 'selected' : '' }}>En attente</option>
                    <option value="En cours" {{ selectedStatut == 'En cours' ? 'selected' : '' }}>En cours</option>
                    <option value="R√©solue" {{ selectedStatut == 'R√©solue' ? 'selected' : '' }}>R√©solue</option>
                </select>
            </div>
    
            <!-- Filtre par Type -->
            <div class="col-md-4">
                <label for="type" class="form-label">Type</label>
                <select name="type" id="type" class="form-control">
                    <option value="">Tous</option>
                    <option value="Service" {{ selectedType == 'Service' ? 'selected' : '' }}>Service</option>
                    <option value="Syst√®me" {{ selectedType == 'Syst√®me' ? 'selected' : '' }}>Syst√®me</option>
                   
                </select>
            </div>
    
            <!-- Filtre par Cat√©gorie -->
            <div class="col-md-4">
                <label for="categorie" class="form-label">Cat√©gorie</label>
                <select name="categorie" id="categorie" class="form-control">
                    <option value="">Toutes</option>
                    {% for categorie in categories %}
                        <option value="{{ categorie.id }}" {{ selectedCategorie == categorie.id ? 'selected' : '' }}>
                            {{ categorie.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>
    
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bx bx-search"></i> Rechercher
            </button>
            <a href="{{ path('reclamation_index') }}" class="btn btn-secondary">R√©initialiser</a>
        </div>
    </form>
    
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des R√©clamations</h5>
            <a href="{{ path('reclamation_new') }}" class="btn btn-primary">
                <i class="bx bx-plus"></i> Cr√©er une R√©clamation
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Cible</th>
                        <th>Cat√©gorie</th>
                        <th>Type</th>
                        <th>Statut</th>
                        <th>Date de Cr√©ation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% for reclamation in reclamations %}
                        <tr>
                            <td>{{ reclamation.id }}</td>
                            <td title="{{ reclamation.description }}">
                                {{ reclamation.description|slice(0, 50) ~ (reclamation.description|length > 50 ? '...' : '') }}
                            </td>
                             <td>{{ reclamation.cible }}</td>
                            <td>{{ reclamation.categorie.nom }}</td>
                            <td>{{ reclamation.type.value }}</td>
                            <td>
                                {% if reclamation.statut.value == 'en attente' %}
                                    <span class="badge bg-warning text-dark">üïí {{ reclamation.statut.value }}</span>
                                {% elseif reclamation.statut.value == 'en cours' %}
                                    <span class="badge bg-info text-dark">üîÑ {{ reclamation.statut.value }}</span>
                                {% elseif reclamation.statut.value == 'r√©solue' %}
                                    <span class="badge bg-success">‚úÖ {{ reclamation.statut.value }}</span>
                                {% else %}
                                    <span class="badge bg-danger">‚ùå {{ reclamation.statut.value }}</span>
                                {% endif %}
                            </td>
                            
                            <td>{{ reclamation.datecreation|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}" class="btn btn-icon btn-primary" title="Voir">
                                        <i class="bx bx-show-alt"></i>
                                    </a>
                                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-icon btn-warning" title="Modifier">
                                        <i class="bx bx-edit-alt"></i>
                                    </a>
                                    <form method="post" action="{{ path('reclamation_delete', {'id': reclamation.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette r√©clamation ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                        <button type="submit" class="btn btn-icon btn-danger" title="Supprimer">
                                            <i class="bx bx-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune r√©clamation trouv√©e.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}