{% block body %}
    <link rel="stylesheet" href="{{ asset('Styles/Styles_blog/Style_show_blog.css') }}">

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <!-- Blog Header Section - More Compact -->
                <div class="blog-header mb-3">
                    <h1 class="h2 fw-bold text-center">{{ blog.title }}</h1>

                    <div class="d-flex justify-content-between align-items-center mt-2 text-muted small">
                        <div class="blog-meta">
                            <span class="me-2"><i class="far fa-user me-1"></i> {{ blog.author ?? 'Anonymous' }}</span>
                            <span class="me-2"><i class="far fa-calendar-alt me-1"></i> {{ blog.createdAt|date('M d, Y') }}</span>
                            {% if blog.category %}
                                <span><i class="far fa-folder me-1"></i> {{ blog.category }}</span>
                            {% endif %}
                        </div>

                        <!-- Compact Sentiment Badge -->
                        {% if blog.sentiment %}
                            <div class="sentiment-indicator">
                                <span class="badge
                                    {% if blog.sentiment == 'positive' %}bg-success text-white
                                    {% elseif blog.sentiment == 'negative' %}bg-danger text-white
                                    {% else %}bg-secondary text-white
                                    {% endif %}">
                                    <i class="fas
                                        {% if blog.sentiment == 'positive' %}fa-smile
                                        {% elseif blog.sentiment == 'negative' %}fa-frown
                                        {% else %}fa-meh
                                        {% endif %} me-1"></i>
                                    {{ blog.sentiment|capitalize }}
                                </span>
                            </div>
                        {% else %}
                            <div class="sentiment-indicator">
                                <span class="badge bg-light text-dark border">Not analyzed</span>
                            </div>
                        {% endif %}
                    </div>

                    <hr class="my-3">
                </div>

                <!-- Blog Content - More Compact -->
                <div class="card shadow border-0 rounded mb-3">
                    <div class="card-body p-3 p-md-4">
                        <div class="blog-content">
                            {{ blog.content|raw }}
                        </div>
                    </div>
                </div>

                <!-- Compact Action Buttons -->
                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_blog_index') }}" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>

                    <div>
                        <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-sm btn-warning me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('app_blog_message', {'id': blog.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-envelope"></i> Contact
                        </a>
                    </div>
                </div>

                <!-- Compact Social Sharing -->
                <div class="share-container text-center mt-4 pt-2 border-top">
                    <div class="d-flex justify-content-center gap-1 mt-2">
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 30px; height: 30px; padding: 0; line-height: 28px;"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-info btn-sm rounded-circle" style="width: 30px; height: 30px; padding: 0; line-height: 28px;"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-success btn-sm rounded-circle" style="width: 30px; height: 30px; padding: 0; line-height: 28px;"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="btn btn-outline-danger btn-sm rounded-circle" style="width: 30px; height: 30px; padding: 0; line-height: 28px;"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}