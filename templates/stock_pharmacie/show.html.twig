{% extends "stock_pharmacie/navbar.html.twig" %}

{% block content %}
    <div class="content-wrapper" style="margin-top:50px;">
        <div class="container-xxl flex-grow-1 container-p-y" style="margin-left:500;">
            <h4 class="fw-bold py-3 mb-4">
                <span class="text-muted fw-light">Médicaments /</span> Détails du médicament
            </h4>
            
            <div class="row mb-5">
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100">
                        {% if stock_pharmacie.image %}
                            <img src="{{ asset('uploads/images/' ~ stock_pharmacie.image) }}" 
                                 class="card-img-top" 
                                 alt="{{ stock_pharmacie.nom }}"
                                 style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="text-center p-3 bg-light">
                                <i class="bx bx-image-alt" style="font-size: 100px; color: #d1d1d1;"></i>
                                <p class="text-muted">Aucune image disponible</p>
                            </div>
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title">{{ stock_pharmacie.nom }}</h5>
                            <p class="card-text"><strong>Type:</strong> {{ stock_pharmacie.type }}</p>
                            <p class="card-text"><strong>Prix:</strong> {{ stock_pharmacie.prix|number_format(2, ',', ' ') }} €</p>
                            <p class="card-text"><strong>Quantité:</strong> {{ stock_pharmacie.quantite }}</p>
                            <p class="card-text">
                                <strong>Statut:</strong> 
                                <span class="badge bg-{{ stock_pharmacie.statu ? 'success' : 'danger' }}">
                                    {{ stock_pharmacie.statu ? 'En stock' : 'Rupture' }}
                                </span>
                            </p>
                            {% if stock_pharmacie.details %}
                                <p class="card-text"><strong>Détails:</strong> {{ stock_pharmacie.details }}</p>
                            {% endif %}
                            <p class="card-text">
                                <strong>Description:</strong> 
                                <span id="description">{{ stock_pharmacie.description }}</span>
<a href="{{ path('app_stock_pharmacie_show', {'id': stock_pharmacie.id}) }}">
  <i class="fas fa-language translate-icon" style="cursor: pointer; margin-left: 10px;"></i>
</a>                            </p>
                            
                            <div class="mt-4">
                                <a href="{{ path('app_stock_pharmacie_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Retour
                                </a>
                                
                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}