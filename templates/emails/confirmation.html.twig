{# templates/emails/confirmation.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmation de votre événement</title>
</head>
<body>
    <h1>Votre événement a été ajouté avec succès !</h1>

    <p><strong>Nom de l'événement :</strong> {{ evenement.nom }}</p>
