{% extends 'base.html.twig' %}

{% block title %}Send Message to {{ blog.author.Nom }} {{ blog.author.Prenom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Send Message to {{ blog.author.Nom }} {{ blog.author.Prenom }}</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.content, { 'attr': { 'rows': 5, 'class': 'form-control', 'placeholder': 'Type your message here...' } }) }}
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Send Message
                            </button>
                            <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Blog
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
